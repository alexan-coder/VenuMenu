<div id="center-new-comment">
<h1 id="add-a-comment"><%= link_to "Add a Comment", new_comment_path %></h1></div>
<div class="comments-container">

	<h1 class="add-comment">
	</h1>
	<% @comments.each do |comment| %>
	<div class="comments">
		<h1><%= comment.title %></h1>
		<h2><%= comment.venue_name %></h2>
		<h2><%= comment.city_and_state %></h2>
		<h3><%= comment.user_name %></h3>
		<p><%= comment.body %></p>
		<p><%= comment.created_at %></p>
		<%= link_to 'Delete', [current_user, comment], confirm: "Are you sure?", method: :delete %>
		<%= link_to 'Edit', edit_comment_path(comment) %>
	</div>
</div>
<div class="padding"></div>
<% end %>	
